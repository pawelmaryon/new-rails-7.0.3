<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<p><%= link_to "edit #{@article.title}", edit_article_path(@article) %></p>
<p><%= link_to "delete #{@article.title}", article_path(@article), data: {
                                                                        turbo_method: :delete,
                                                                        turbo_confirm: "are you sure?"
} %></p>

<h2>Comments:</h2>
<% @article.comments.each do | comment| %>
  <h3>Commenter: <%= comment.commenter %></h3>
  <p>Comment :<%= comment.body %></p>
<% end %>

<%= form_with model: [@article, @article.comments.build] do |form| %>
  <div>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </div>
  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>