<% unless comment.archived? %>
  <h3>Commenter: <%= comment.commenter %></h3>
  <p>Comment :<%= comment.body %></p>
  <p><%= link_to "delete comment", [comment.article, comment], data: {
                                                                    turbo_method: :delete,
                                                                    turbo_confirm: "are you sure?"
  } %></p>
<% end %>